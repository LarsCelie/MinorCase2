
<h1>Klant Inschrijven</h1>
<br />
<br />
<form class="form-horizontal" method="post" asp-action="Registeer" asp-controller="Klant">
        <div class="form-group">
            <label class="control-label col-sm-2" for="voornaam">Voornaam:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="voornaam" placeholder="Jan">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="tussenvoegsel">Tussenvoegsel:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="tussenvoegsel" placeholder="Jan">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="achternaam">Achternaam:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="achternaam" placeholder="Smit">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="adres">Adres:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="adres" placeholder="Straatnaam 17">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="postcode">Postcode:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="postcode" placeholder="1234AB">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="woonplaats">Woonplaats:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="woonplaats" placeholder="Amsterdam">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="telefoonnummer">Telefoonnummer:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="telefoonnummer" placeholder="0612345678">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Email:</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="email" placeholder="jan.smit@example.com">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-12">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
